<div class="container joinsection">
<div class="ui raised segment signup inactive">
  <h3 class="ui inverted blue block header"> SIGN UP  <a  style="float:right;"href="/home/index">Back Home</a></h3>
  <div class="ui blue stacked segment">
    <!-- form here -->
    <div class="ui form">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name,)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %><br />
          <div class="ui left labeled icon input">
            <%= f.text_field :name, autofocus: true,:class=>"form-control" %>
            <i" class="user icon"></i>
            <div class="ui corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <div class="ui left labeled icon input">
            <%= f.email_field :email, autofocus: true,:class=>"form-control" %>
            <i" class="user icon"></i>
            <div class="ui corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="ui left labeled icon input">
            <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
            <i class="mail icon"></i>
            <div class="ui corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>
      

      <div class="field">
        <%= f.label :password_confirmation %><br />

        <div class="ui left labeled icon input">
          <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control" %>
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="asterisk icon"></i>
          </div>
        </div>
      </div>
      <div>

       <div class="field">
          <%= f.label :user_type %><br />
          <div class="ui left labeled icon input">
            <%= f.text_field :user_type, autofocus: true,:class=>"form-control" %>
            <i" class="user icon"></i>
            <div class="ui corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>

      <%= f.submit "Sign up",:class => "ui red submit button"%>
      <div class="ui error message"></div>
      </div>
      <% end %>
      <div class="ui divider"></div>
    </div>
</div>
  <%= render "devise/shared/links" %>
</div>
</div>


